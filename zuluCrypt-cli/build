#!/bin/bash
 
if [ "$1" == "install" ] ; then
	
	cp -vf zuluCrypt-cli /usr/bin

	chmod -v u+s /usr/bin/zuluCrypt-cli
else	
	gcc -c -Wall -o  String.o String.c
 
	ar  rcs libString.a String.o
  
	gcc   -D_FILE_OFFSET_BITS=64 -Wall -c libzuluCrypt.c   -o libzuluCrypt.o   
 
	ar  rcs libzuluCrypt.a libzuluCrypt.o
	
	gcc  -o zuluCrypt-cli zuluCrypt.c -Wall  -D_FILE_OFFSET_BITS=64 -L. -L/usr/local/lib -L/lib -lzuluCrypt -lString  -lcryptsetup
	
fi
